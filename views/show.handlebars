<h1 class="mb-1 restaurant-show-title">{{restaurants.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurants.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurants.location}}
        <a href="{{restaurants.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurants.phone}}
      </p>

      <p class="mb-5">
        {{restaurants.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurants.image}}" alt="{{restaurants.name}}"
        style="max-width: 600px;">
    </div>
  </div>
</div>

<div class="container ">
  <div class="row ">
    <div class="input-group-append m-auto">
      <a href="/" class="mx-auto mb-2"><button class="btn btn-major " type="submit" id="back-button">
          <i class="fas fa-arrow-left"></i>
          Back
        </button></a>
    </div>
    <div class="input-group-append m-auto">
      <a href="/restaurant/{{restaurants._id}}/edit" class="mx-auto mb-2"><button class="btn btn-major " type="submit"
          id="edit-button">
          <i class="far fa-edit"></i>
          Edit
        </button></a>
    </div>

    <form action="/restaurant/{{restaurants._id}}?_method=DELETE" method="POST" style="display:inline"
      class="input-group-append m-auto">
      <button class="btn btn-major " type="submit" id="-button">
        <i class="far fa-trash-alt"></i>
        Delete
      </button>
    </form>
  </div>
</div>