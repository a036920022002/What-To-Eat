<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<div class="container d-flex ">
<div class="input-group-append">
  <a href="/restaurant/New" class="mx-auto mt-5"><button class="btn btn-major " type="submit" id="search-button">
      新增餐廳
      <i class="fas fa-plus"></i></button></a>
</div>

<div class="input-group-append">
  <a href="/restaurant/random" class="mx-auto mt-5"><button class="btn btn-major " type="submit" id="random-button">
      Random
      <i class="fas fa-random"></i></button></a>
</div>
</div>



<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurant/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>
        </a>

        <span class="badge badge-pill badge-danger font-weight-normal">
          {{this.rating}}
          <i class="fas fa-star fa-xs"></i>
        </span>

        <a href="/restaurant/{{this._id}}/edit">
          <button class="btn btn-major " type="submit" id="delete-button">
            <i class="far fa-edit"></i>
          </button>
        </a>


        <form action="/restaurant/{{this._id}}?_method=DELETE" method="POST" style="display:inline"
          class="input-group-append m-auto">
          <button class="btn btn-major " type="submit" id="delete-button">
            <i class="far fa-trash-alt"></i>
          </button>
        </form>
      </div>
    </div>

    {{/each}}
  </div>
</div>
</div>
</div>